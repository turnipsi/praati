#!/usr/bin/perl -T
# -*- mode: perl; coding: iso-8859-1; -*-
# $Id: praati,v 1.125 2014/05/17 19:46:26 je Exp $

=pod

A sample Apache configuration:

  PerlModule Apache::PerlRun
  PerlTaintCheck On

  <IfDefine PRAATI_DEBUG>
    PerlModule CGI::Pretty
    PerlSetEnv PRAATI_DEBUG 1
  </IfDefine>

  <IfDefine PRAATI_NYTPROF>
    MaxClients 1
    MaxRequestsPerChild 0
    PerlModule Devel::NYTProf::Apache
  </IfDefine>

  # XXX Preload modules in a separate init script.
  # XXX Hardcoded path, and this code will run as root!
  PerlRequire /var/www/users/je/praati/apache_startup.pl

  # XXX why does not Files or Location work?
  <Directory /users/*/praati>
    Options +ExecCGI
    PerlHandler Apache::PerlRun
    PerlSendHeader On
    SetHandler perl-script
  </Directory>

=cut

# use diagnostics;
use strict;
use warnings FATAL => qw(all);

use Praati;

package main {
  Praati::Controller::main();
}
