  q{Strangelove}                       =>  '7.0',
  q{Suffer Well}                       =>  '8.5',
  q{Dream On}                          =>  '8.0',
  q{People Are People}                 =>  '5.5',
  q{Martyr}                            =>  '7.0',
  q{Walking In My Shoes}               =>  '3.5',
  q{I Feel You}                        => '10.0',
