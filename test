  map { $_ => (10.0 - $ratings_for_critics_three_and_four{ $_ }) }
    keys %ratings_for_critics_three_and_four
);

$critic5
  and $critic5->login('critic')
  and $critic5->rate_songs($panel_name,
			   \&Praati::User::RatingStyles::do_not_rate)
  and $critic5->logout();

